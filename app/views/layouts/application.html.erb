        <div class="content">
           <div class="row">
            <div class="span12">
            </div>
          </div>

        </div>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->

    
			<div class="navbar navbar-fixed-top">
			  <div class="navbar-inner">
			    <div class="container">
			      <a class="brand" href="/">Phone Retailer</a>
			      	<ul class="nav">
			        	<li class="active"><a href="/">Home</a></li>
