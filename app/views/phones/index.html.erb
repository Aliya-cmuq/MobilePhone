<% @phones.each do |phone| %>
  <tr>
    <td><%= phone.brand %></td>
    <td><%= phone.name %></td>
    <td><%= phone.description %></td>
    <td><%= phone.price %></td>
    <td><%= phone.quantityInStock %></td>
    <% if signed_in? %>
		<td><%= link_to 'Buy', :controller => :orders, :action => :new, :id => phone.id %></td>
    <td><%= link_to 'Show', phone %></td>
		
	<% else %>
	
    <td><%= link_to 'Show', phone %></td>
	<% end %>
	</tr>
<% end %>
</table>

